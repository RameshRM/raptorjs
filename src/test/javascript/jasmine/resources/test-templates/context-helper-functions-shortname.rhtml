<c:template
    xmlns:c="core"
    xmlns:test="test"
    name="context-helper-functions-shortname"
    test:contextHelpers="user,isLoggedIn">
    
    <c:if test="isLoggedIn()">
        Hello ${user().firstName} ${user().lastName}!
    </c:if>
    <c:if test="!isLoggedIn()">
        You are not logged in.
    </c:if>
    
</c:template>
<c:template xmlns:c="http://raptorjs.org/templates/core" name="test"
    params="rootClass,colors,message,buttonAttrs">

    <html xmlns="http://www.w3.org/1999/xhtml">

        <head>
            <title>Templating Demo</title>
            <style>
                stop.begin { stop-color:yellow; }
                stop.end { stop-color:green; }
                body.invalid stop.end { stop-color:red; }
                #err { display:none; }
                body.invalid #err { display:inline; } 
            </style>
            <script>
                function signalError() {
                document.getElementById('body').setAttribute("class",
                "invalid");
                }
            </script>
        </head>
        <body>
            <div style="color: red;">
                Hello World!
            </div>

            <c:choose>
                <ul c:when="notEmpty(colors)">
                    <li c:for="color in colors">${color.toUpperCase()}</li>
                </ul>
                <div c:otherwise="">
                    No Colors!
                </div>
            </c:choose>

            <c:def function="button(label)">
                <button type="button" c:attrs="buttonAttrs">
                    ${label}
                </button>
            </c:def>

            ${button("Hello World")}
            ${button("Hello Universe")}

            <svg xmlns="http://www.w3.org/2000/svg" version="1.1"
                viewBox="0 0 100 100" preserveAspectRatio="xMidYMid slice"
                style="width:100%; height:100%; position:absolute; top:0; left:0; z-index:-1;">
                <linearGradient id="gradient">
                    <stop class="begin" offset="0%" />
                    <stop class="end" offset="100%" />
                </linearGradient>
                <rect x="0" y="0" width="100" height="100"
                    style="fill:url(#gradient)" />
                <circle cx="50" cy="50" r="30" style="fill:url(#gradient)" />
            </svg>
        </body>
    </html>
</c:template>
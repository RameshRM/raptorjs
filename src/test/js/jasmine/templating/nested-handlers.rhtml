<c:template 
    xmlns:c="http://ebay.com/raptor/core"
    xmlns:test="http://ebay.com/raptor/test" 
    name="nested-handlers"
    params="showConditionalTab">
    
    <test:tabs>
        <test:tab title="Tab 1">
            Tab 1 content
        </test:tab>
        
        <test:tab title="Tab 2">
            Tab 2 content
        </test:tab>
        
        <test:tab title="Tab 3" c:if="showConditionalTab">
            Tab 3 content
        </test:tab>
    </test:tabs>

    
</c:template>
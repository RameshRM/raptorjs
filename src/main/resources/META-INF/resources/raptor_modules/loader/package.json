{
    "type": "raptor-module",
    "name": "loader",
    "version": "1.0",
    "description": "Provides support for loading remote JS and CSS code on demand",
    "homepage": "http://wiki2.arch.ebay.com/display/RAPTOR/Home",
    "authors": [
        {
            "name": "Patrick Steele-Idem",
            "email": "psteeleidem@ebay.com"
        }
    ],
    "raptor": {
        "dependencies": [
            {"module": "listeners"},
            {"path": "loader.js"}
        ],
                
        "extensions": {
            "browser": {
                "dependencies": [
                    {"path": "loader_browser.js"}
                ]
            },
            "jquery": {
                "dependencies": [
                    {"path": "loader_browser_jquery.js"}
                ]
            },
            "raptor": {
                "condition": "!extensions.contains('jquery')",
                "dependencies": [
                    {"path": "loader_browser_raptor.js"}
                ]
            },
            "loader.requires": {
                "dependencies": [
                    {"module": "loader.requires"}
                ]
            }
        }
    }
    
    

}

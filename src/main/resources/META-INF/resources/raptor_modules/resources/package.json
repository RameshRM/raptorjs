{
    "type": "raptor-module",
    "name": "resources",
    "version": "1.0",
    "description": "Module to find and access resources in the Raptor resource search path",
    "homepage": "http://wiki2.arch.ebay.com/display/RAPTOR/Home",
    "authors": [
        {
            "name": "Patrick Steele-Idem",
            "email": "psteeleidem@ebay.com"
        }
    ],

    "includes": [
        {"path": "resources.js"},
        {"path": "Resource.js"},
        {"path": "MissingResource.js"}
    ],
    
    "extensions": [
        {
            "name": "server",
            "includes": [
                {"path": "SearchPathEntry.js"},
                {"path": "DirSearchPathEntry.js"},
                {"path": "FileResource.js"},
                {"path": "SearchPath.js"},
                {"path": "resources_server.js"}
            ]
        },
        {
            "name": "browser",
            "includes": [
                {"path": "BrowserResource.js"},
                {"path": "resources_browser.js"}
            ]
        }
    ]
}

{
    "type": "raptor-library",
    "name": "raptor",
    "version": "1.0",
    "description": "RaptorJS",
    "homepage": "http://wiki2.arch.ebay.com/display/RAPTOR/Home",
    "authors": [
        {
            "name": "Patrick Steele-Idem",
            "email": "psteeleidem@ebay.com"
        }
    ],
    
    "raptor": {
        "taglibs": [
            "/templating/taglibs/core/core.rtld",
            "/templating/taglibs/html/html.rtld",
            "/templating/taglibs/optimizer/optimizer.rtld",
            "/templating/taglibs/widgets/widgets.rtld"
        ],
        
        "module-mappings": {
            "taglibs/core/compile-time": "/templating/taglibs/core/compile-time-package.json",
            "taglibs/html/compile-time": "/templating/taglibs/html/compile-time-package.json",
            "taglibs/widgets/compile-time": "/templating/taglibs/widgets/compile-time-package.json"
        },
        
        "dependency-types": {
            "js": {"class": "packaging.Dependency_js", "path": "/packaging/Dependency_js.js"},
            "css": {"class": "packaging.Dependency_css", "path": "/packaging/Dependency_css.js"},
            "dust": {"class": "packaging.Dependency_dust", "path": "/packaging/Dependency_dust.js"},
            "less": {"class": "packaging.Dependency_less", "path": "/packaging/Dependency_less.js"},
            "4cc": {"class": "packaging.Dependency_4cc", "path": "/packaging/Dependency_4cc.js"},
            "module": {"class": "packaging.Dependency_module", "path": "/packaging/Dependency_module.js"},
            "package": {"class": "packaging.Dependency_package", "path": "/packaging/Dependency_package.js"},
            "rhtml": {"class": "packaging.Dependency_rhtml", "path": "/packaging/Dependency_rhtml.js"},
            "rtld": {"class": "packaging.Dependency_rtld", "path": "/packaging/Dependency_rtld.js"},
            "resource": {"class": "packaging.Dependency_resource", "path": "/packaging/Dependency_resource.js"},
            "init-raptor": {"class": "packaging.Dependency_init-raptor", "path": "/packaging/Dependency_init-raptor.js"},
            "loader-metadata": {"class": "packaging.Dependency_loader-metadata", "path": "/packaging/Dependency_loader-metadata.js"} 
        }
    }
    
}

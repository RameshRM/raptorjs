<c:template
    xmlns:c="core"
    xmlns:w="widgets"
    name="{longName}"
    params="name,count">
    
    <div class="{shortNameDashSeparated}"{?ifWidget} w:widget="{longName}/{shortName}Widget"{/ifWidget}>
        <h1>{longName}</h1>
        Hello $name! You have $count new messages.
    </div>

</c:template>